{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "outDir": "./dist/server",
  
      "module": "es2022",
      "moduleResolution": "node",          // ⬅️ overrides “bundler”
      "allowImportingTsExtensions": false, // ⬅️ turn it off
  
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/server"]
  }
  